{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["lib/*", "node_modules/*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs/api-docs",
    "exclude": ["**/node_modules/**"],
    "excludePrivate": true,
    "hideGenerator": true
  }
}
